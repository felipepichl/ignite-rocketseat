generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Authors {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())

  books Books[]

  @@map("authors")
}

model Books {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())

  authors      Authors @relation(fields: [fk_id_author], references: [id])
  fk_id_author String  @unique()

  @@map("books")
}
